<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Scientific">
    <EditText
        android:id="@+id/EditView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@android:color/transparent"
        android:padding="32dp"
        android:textColor="#918F8F"
        android:textSize="32sp"
        android:gravity="end"
        android:fontFamily="sans-serif-light"
        android:maxLength="15"
        android:maxLines="1"
        android:inputType="numberDecimal"
        app:layout_constraintTop_toBottomOf="@id/toolbarc"/>

    <TextView
        android:id="@+id/TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/EditView"
        android:gravity="end"
        android:padding="32dp"
        android:maxLines="1"
        android:maxLength="15"
        android:fontFamily="sans-serif-light"
        android:textColor="#000000"
        android:textSize="32sp"
         />

    <ImageButton
        android:id="@+id/BackSpace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/TextView"
        app:layout_constraintEnd_toEndOf="@id/TextView"
        app:layout_constraintBottom_toTopOf="@id/GridLayout"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:padding="10dp"
        android:background="@android:color/transparent"
        android:src="@drawable/baseline_backspace_24" />
    <TextView
        android:id="@+id/Radian"
        android:backgroundTint="@android:color/transparent"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:text="Rad"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/TextView"
        app:layout_constraintBottom_toTopOf="@id/GridLayout"
        app:layout_constraintRight_toLeftOf="@id/BackSpace"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="30dp"/>

    <ImageButton
        android:id="@+id/swap"
        style="@style/scientific"
        android:background="@android:color/transparent"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/baseline_swap_horiz_24"
        app:layout_constraintBottom_toTopOf="@id/GridLayout"
        app:layout_constraintRight_toLeftOf="@id/BackSpace"
        app:layout_constraintStart_toEndOf="@id/Radian"
        app:layout_constraintTop_toBottomOf="@id/TextView"
        app:layout_constraintVertical_bias="0.508" />

    <GridLayout
        android:id="@+id/GridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="5"
        android:rowCount="7"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TextView">

        <Button
            android:id="@+id/log"
            style="@style/scientific"
            android:layout_height="71dp"
            android:text="log" />
        <Button
            android:id="@+id/e"
            style="@style/scientific"
            android:text="e" />


        <Button
            android:id="@+id/sin"
            style="@style/scientific"
            android:text="sin" />
        <Button
            android:id="@+id/cos"
            style="@style/scientific"
            android:text="cos" />
        <Button
            android:id="@+id/tan"
            style="@style/scientific"
            android:text="tan" />



        <Button
            android:id="@+id/xpowery"
            style="@style/scientific"
            android:text="x^y" />
        <Button
            android:id="@+id/C"
            style="@style/scientific"
            android:text="C"
            android:textColor="#000000" />

        <Button
            android:id="@+id/bracket"
            style="@style/scientific"
            android:text="()"
            android:textColor="#7ACBD5" />

        <Button
            android:id="@+id/modulus"
            style="@style/scientific"
            android:text="%"
            android:textColor="#7ACBD5" />



        <Button
            android:id="@+id/divide"
            style="@style/scientific"
            android:text="÷"
            android:textColor="#7ACBD5" />
        <Button
            android:id="@+id/square"
            style="@style/scientific"
            android:text="x²" />





        <Button
            android:id="@+id/seven"
            style="@style/scientific"
            android:text="7" />

        <Button
            android:id="@+id/eight"
            style="@style/scientific"
            android:text="8" />

        <Button
            android:id="@+id/nine"
            style="@style/scientific"
            android:text="9" />


        <Button
            android:id="@+id/multiply"
            style="@style/scientific"
            android:layout_row="0"
            android:text="×"
            android:textColor="#7ACBD5" />

        <Button
            android:id="@+id/pi"
            style="@style/scientific"
            android:text="π" />

        <Button
            android:id="@+id/four"
            style="@style/scientific"
            android:text="4" />

        <Button
            android:id="@+id/five"
            style="@style/scientific"
            android:text="5" />



        <Button
            android:id="@+id/six"
            style="@style/scientific"
            android:text="6" />



        <Button
            android:id="@+id/minus"
            style="@style/scientific"
            android:text="-"
            android:textColor="#7ACBD5" />

        <Button
            android:id="@+id/root"
            style="@style/scientific"
            android:text="√" />

        <Button
            android:id="@+id/one"
            style="@style/scientific"
            android:text="1" />

        <Button
            android:id="@+id/two"
            style="@style/scientific"
            android:text="2" />

        <Button
            android:id="@+id/three"
            style="@style/scientific"
            android:text="3" />

        <Button
            android:id="@+id/plus"
            style="@style/scientific"
            android:text="+"
            android:textColor="#7ACBD5"/>
        <Button
            android:id="@+id/modulo"
            style="@style/scientific"
            android:text="|x|" />

        <Button
            android:id="@+id/negative"
            style="@style/scientific"
            android:textColor="#7ACBD5"
            android:text="+/-"
            android:textSize="28dp" />

        <Button
            android:id="@+id/zero"
            style="@style/scientific"
            android:text="0" />
        <Button
            android:id="@+id/dot"
            style="@style/scientific"
            android:text="." />

        <Button
            android:id="@+id/equal"
            android:layout_margin="1dp"
            android:padding="1dp"
           android:layout_height="70dp"
           android:layout_width="78dp"
            android:textSize="24dp"
          android:fontFamily="sans-serif-light"

            android:backgroundTint="#7ACBD5"
            android:text="="

            android:textColor="#FFFFFF"
            />
    </GridLayout>
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarc"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#7ACBD5"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/EditView"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />


</androidx.constraintlayout.widget.ConstraintLayout>